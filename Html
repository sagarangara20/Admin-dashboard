<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Admin Dashboard â€“ Attendance & Marks</title>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    body{font-family:system-ui,Arial,sans-serif;margin:20px}
    .grid{display:grid;grid-template-columns:1fr 1fr;gap:24px}
    header{display:flex;align-items:center;justify-content:space-between;margin-bottom:16px}
    .card{padding:16px;border:1px solid #ddd;border-radius:12px}
    canvas{max-height:360px}
  </style>
</head>
<body>
  <header>
    <h2>Admin Dashboard</h2>
    <small>Dynamic charts with Chart.js</small>
  </header>
  <div class="grid">
    <div class="card">
      <h3>Monthly Attendance (%)</h3>
      <canvas id="attendanceChart"></canvas>
    </div>
    <div class="card">
      <h3>Average Marks by Subject</h3>
      <canvas id="marksChart"></canvas>
    </div>
  </div>
  <script>
    async function loadJSON(url, fallback){
      try{
        const r = await fetch(url);
        if(!r.ok) throw new Error("bad status");
        return await r.json();
      }catch(e){
        console.warn(Using fallback for ${url}:, e);
        return fallback;
      }
    }

    // Fallback data (used when no backend is running)
    const attendanceFallback = {
      labels: ["Jan","Feb","Mar","Apr","May","Jun","Jul","Aug","Sep","Oct","Nov","Dec"],
      data:   [92,88,90,95,91,89,93,94,90,92,91,96]
    };
    const marksFallback = {
      labels: ["Math","Physics","Chemistry","English","CS"],
      data:   [81,78,84,88,92]
    };

    (async () => {
      const attendance = await loadJSON("/api/attendance", attendanceFallback);
      const marks      = await loadJSON("/api/marks",      marksFallback);

      // Attendance (line chart)
      new Chart(document.getElementById("attendanceChart"), {
        type: "line",
        data: {
          labels: attendance.labels,
          datasets: [{
            label: "Attendance (%)",
            data: attendance.data,
            fill: false,
            tension: 0.35
          }]
        },
        options: {
          responsive: true,
          scales: { y: { beginAtZero: true, suggestedMax: 100 } }
        }
      });

      // Marks (bar chart)
      new Chart(document.getElementById("marksChart"), {
        type: "bar",
        data: {
          labels: marks.labels,
          datasets: [{ label: "Avg Marks", data: marks.data }]
        },
        options: {
          responsive: true,
          scales: { y: { beginAtZero: true, suggestedMax: 100 } }
        }
      });
    })();
  </script>
</body>
</html>
